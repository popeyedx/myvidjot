{{#if success_msg}}
<div class="row justify-content-center">
  <div class="col-md-9">
    <div class="alert alert-success mb-2" role="alert">
      {{success_msg}}
    </div>
  </div>
</div>
{{/if}}

{{#if error_msg}}
<div class="row justify-content-center">
  <div class="col-md-9">
    <div class="alert alert-danger mb-2" role="alert">
      {{error_msg}}
    </div>
  </div>
</div>
{{/if}}
