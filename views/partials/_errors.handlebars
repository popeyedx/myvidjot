{{#each errors}}
<div class="row justify-content-center">
  <div class="col-md-9">
    <div class="alert alert-danger mb-2" role="alert">
      {{text}}
    </div>
  </div>
</div>
{{else}}
{{/each}}

{{!--passportの認証に失敗した場合--}}
{{#if error}}
<div class="row justify-content-center">
  <div class="col-md-9">
    <div class="alert alert-danger mb-2" role="alert">
      {{error}}
    </div>
  </div>
</div>
{{/if}}

{{!--passportの認証に成功した場合--}}
{{#if success}}
<div class="row justify-content-center">
  <div class="col-md-9">
    <div class="alert alert-success mb-2" role="alert">
      {{success}}
    </div>
  </div>
</div>
{{/if}}